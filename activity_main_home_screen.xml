<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/homescreen"
    tools:context=".MainHomeScreenActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find Item"
        android:id="@+id/checkExistingItems"
        android:onClick="searchForItem"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Item"
        android:id="@+id/AddItem"
        android:onClick="addItem"
        android:layout_below="@+id/checkExistingItems"
        android:layout_alignLeft="@+id/checkExistingItems"
        android:layout_alignStart="@+id/checkExistingItems"
        android:layout_alignRight="@+id/checkExistingItems"
        android:layout_alignEnd="@+id/checkExistingItems"/>

</RelativeLayout>